<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!--Buttons-->
    <style name="ButtonsBorder" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/md_theme_primary</item>
        <item name="strokeWidth">2dp</item>
        <item name="shapeAppearanceOverlay">@style/RoundedPill</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RoundedPill">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!--TextViews-->
    <style name="TextviewScore" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/md_theme_onPrimaryContainer</item>
    </style>

    <style name="TextviewTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/md_theme_primary</item>
    </style>

    <style name="TextViewScoreTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/md_theme_primary</item>
    </style>

    <style name="TextViewAppNameSplash" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/md_theme_primary</item>
        <item name="android:textStyle">italic|bold</item>

    </style>

    <!--Activities-->
    <style name="blackbackground" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/background_black</item>
    </style>

</resources>